{
    "name": "bolt/article",
    "description": "üìù Bolt Extension to add the Article FieldType",
    "type": "bolt-extension",
    "license": "MIT",
    "authors": [
        {
            "name": "Bob den Otter",
            "email": "bob@twokings.nl"
        }
    ],
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "bolt/core": "^5.2.0-rc.1",
        "symplify/easy-coding-standard": "^12.2.0"
    },
    "autoload": {
        "psr-4": {
            "Bolt\\Article\\": "src/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "entrypoint": "Bolt\\Article\\Extension",
        "screenshots": [
            "screenshots/article.png"
        ]
    },
    "config": {
        "allow-plugins": {
            "symfony/flex": true,
            "drupol/composer-packages": true
        }
    }
}
